@page "/login"
@inherits LoginBase
@layout LoginLayout
@inject NavigationManager _navigationManager

<h2><b>Login</b></h2>
<hr>
<EditForm Model="@LoginModel">
    <div class="col-6">
        <input type="text" @bind-value="LoginModel.UserName" class="form-control" placeholder="email address">
    </div>
    <br />
    <div class="col-6">
        <input type="password" @bind-value="LoginModel.Password" class="form-control" placeholder="password">
    </div>
    <br />
    <div class="col-6">
        <button class="btn btn-primary" @onclick="LoginUser">Login</button>
    </div>
</EditForm>

