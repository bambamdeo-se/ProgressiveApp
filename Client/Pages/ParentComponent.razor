@page "/pc"
@attribute [Authorize]
<h1 style="@Style">Parent Component Text</h1>

<CascadingValue Value="@Style" Name="Style" IsFixed="true">
    <CascadingValue Value="@BorderStyle" Name="BorderStyle" IsFixed="true">
        <ChildComponent></ChildComponent>
    </CascadingValue>
</CascadingValue>

@code {

    public string Style { get; set; } = "color:red";
    public string BorderStyle { get; set; } = "border:1px solid red";

}
