@page "/login"
@inherits LoginBase
@layout LoginLayout
@inject NavigationManager _navigationManager

<h2><b>Login</b></h2>
<hr>
<EditForm Model="model" OnValidSubmit="LoginUser">
    <div class="col-6">
       @Message
    </div>
    <div class="col-6">
        <input type="text" @bind-value="model.EmailAddress" class="form-control" placeholder="email address">
    </div>
    <br />
    <div class="col-6">
        <input type="password" @bind-value="model.Password" class="form-control" placeholder="password">
    </div>
    <br />
    <div class="col-6">
        <button class="btn btn-primary" @onclick="LoginUser">Login</button>
    </div>
</EditForm>

